<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/tiny">

    <ImageView
        android:id="@+id/dialog_icon"
        android:src="@drawable/ic_vote"
        android:layout_width="@dimen/giant"
        android:layout_height="@dimen/giant"
        android:layout_marginBottom="@dimen/tiny_extra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/vote" />

    <TextView
        android:id="@+id/dialog_header"
        android:text="@string/vote_phase"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginVertical="@dimen/epsilon"
        app:layout_constraintTop_toBottomOf="@id/dialog_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_text"
        />

    <TextView
        android:id="@+id/dialog_text"
        android:text="@string/lorem"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:minLines="4"
        android:layout_marginVertical="@dimen/epsilon"
        app:layout_constraintTop_toBottomOf="@id/dialog_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_barber"
        />

    <ImageView
        android:id="@+id/dialog_barber"
        android:contentDescription="@string/barber_name"
        android:src="@drawable/ic_info"
        android:layout_width="@dimen/giant"
        android:layout_height="@dimen/giant"
        android:padding="@dimen/tiny"
        android:layout_marginVertical="@dimen/tiny"
        app:layout_constraintTop_toBottomOf="@id/dialog_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_content_rv"
        android:foreground="?android:attr/selectableItemBackground"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_content_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yo_mama_extra"
        android:layout_marginVertical="@dimen/epsilon"
        app:layout_constraintTop_toBottomOf="@id/dialog_barber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_next"
        />

    <TextView
        android:id="@+id/dialog_reset"
        android:text="@string/reset"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingVertical="@dimen/tiny_extra"
        android:paddingHorizontal="@dimen/tiny"
        app:layout_constraintTop_toBottomOf="@id/dialog_content_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:foreground="?android:attr/selectableItemBackground"
        />

    <TextView
        android:id="@+id/dialog_next"
        android:text="@string/vote"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingVertical="@dimen/tiny_extra"
        android:paddingHorizontal="@dimen/tiny"
        app:layout_constraintTop_toBottomOf="@id/dialog_content_rv"
        app:layout_constraintLeft_toRightOf="@id/dialog_reset"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:foreground="?android:attr/selectableItemBackground"
        />


</androidx.constraintlayout.widget.ConstraintLayout>